 <header>
  <nav class ="navbar navbar-expand-lg navbar-dark bg-dark">
   <div class ="container">
    <a class ="navber-brand" href ="/">
     <span>Bookers</span>
    </a>
    <div class ="collapse navbar-collase" id ="navbarNavDropdown">
     <ul class ="navbar-nav ml-auto">
     </ul>
    </div>
   </div>
  </nav>
 </header>

　<main>
　  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>
   <div class ="container">
    <div class ="row">
     <div class ="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
      <div class ="form-group">
      <label for ="book_title">Title</label>
       <%= f.text_field :title, class: "form-control book_title", id: "book_title" %>
      </div>
      <div class ="form-group">
      <label for ="book_opinion">Opinion</label>
       <%= f.text_area :body, class: "form-control book_body", id: "book_body" %>
      </div>
       <%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-success mt-4" %>
       <% end %>
       <%= link_to "show", book_path(@book.id) %>
       |
       <%= link_to "back", books_path(@book.id) %>
     </div>
    </div>
   </div>
  </div>
 </main>


