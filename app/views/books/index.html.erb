  <main>
    <p id ="notice"></p>
    <div class ="container px-5 px-sm-0">

    <div class ="row">

      <div class ="col-md-3">
       <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
       <table class = "table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
             <th>introduction</th>
             <th></th>
            </tr>
         </tbody>
       </table>
       <h2 class ="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
       <div class ="form-group">
        <label for ="book_title">Title</label>
       <%= f.text_field :title, class: "form_control book_title", id: "book_title" %>
       </div>
       <div class ="form-group">
        <label for ="book_opinion">Opinion</label>
       <%= f.text_area :body, class: "form_control book_body", id: "book_body" %>
       </div>
       <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
       <% end %>
     </div>

   <div class ="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan ="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
    </tbody>
      </tr>
      <tr>
        <td></td>
      </tr>
  </table>


    </div>

    </div>

    </div>

  </main>