<main>
   <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>
  <p id ="notice"></p>

   <div class ="container px-5 px-sm-0">
   <div class ="row">

   <div class ="col-md-3">
     <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
      <table class = "table">
        <tbody>
          <tr>
           <th>name</th>
           <th><%= @user.name %></th>
          </tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class ="row">
       <%= link_to "Edit", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block"%>
      </div>

     <h2 class ="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
       <div class ="form-group">
        <label for ="book_title">Title</label>
       <%= f.text_field :title, class: "form-control book_title" %>
      </div>
       <div class ="form-group">
        <label for ="book_opinion">Opinion</label>
       <%= f.text_area :body, class: "form-control book_body", id: "book_body" %>
      </div>
       <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
       <% end %>
     </div>

      <div class ="col-md-8 offset-md-1">
       <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
           <tr>
             <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan ="3"></th>
          </tr>
         </thead>
          <tbody>
           <% @books.each do |book| %>
              <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, "/books/#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
           <% end %>
         </tbody>
      </table>
    </div>
   </div>
  </div>
</main>